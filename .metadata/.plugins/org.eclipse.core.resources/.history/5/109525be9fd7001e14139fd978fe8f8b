package codeTech_IT_Solutions.com;

import codetech.com.HumanPlayer;
import codetech.com.TicTacToe;

public class MainClass {

	
   public static void main(String[] args) {

 
	   
	   TicTacToe t = new TicTacToe();
		
		HumanPlayer p1 = new HumanPlayer("Ram", 'x');
		HumanPlayer p2 = new HumanPlayer("Sita", 'o');
	
		HumanPlayer cp = p1;
		while(true) {
		System.out.println(cp.name + " : now Your chance make a move ");
		cp.makeMove();
		TicTacToe.dispBoard();
		if(TicTacToe.checkColWin() || TicTacToe.checkRowWin() || TicTacToe.checkDigWin()) {
			System.out.println(cp.name + " :has won");
			
			break;
		}
		
		else if(TicTacToe.checkDraw()) {
			System.out.println("Game is Draw");
			break;
		}
		
		else {
			if(cp == p1) {
				cp = p2;
			}else {
				cp = p1;
			}
		}
	}
	
	

   }	   
}

